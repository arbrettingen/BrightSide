<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="30">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:text="Affirmations Viewed: "
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="12dp"
                android:textSize="16sp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="12dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/history_txt_affirmations_viewed"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="30">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:text="Custom Affirmations Added: "
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="12dp"
                android:textSize="16sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/history_txt_affirmations_added"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="12dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="30">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:text="Affirmations Deleted: "
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="12dp"
                android:textSize="16sp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:id="@+id/history_txt_affirmations_deleted"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="12dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="30">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:text="Best Streak (Days): "
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="12dp"
                android:textSize="16sp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:id="@+id/history_txt_best_streak"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="12dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="30">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:text="Current Streak (Days): "
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="12dp"
                android:textSize="16sp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:id="@+id/history_txt_current_streak"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="12dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="30">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:text="Total Days: "
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="12dp"
                android:textSize="16sp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:id="@+id/history_txt_total_days"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="0"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="12dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>


    </LinearLayout>

    <!-- The navigation drawer -->

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:weightSum="28"
        android:id="@+id/history_drawer_cont"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:scaleType="centerCrop"
            android:src="@drawable/sunrise" />

        <ListView
            android:drawSelectorOnTop="true"
            android:id="@+id/history_left_drawer"
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_weight="24"
            android:background="@color/colorPrimaryDark"
            android:choiceMode="singleChoice" />
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>

